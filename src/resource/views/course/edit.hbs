<div class="search-form">
    <form method="POST" action="/course/{{course._id}}/edit">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name"
                placeholder="Nhập từ khóa...">
        </div>
        <div class="mb-3">
            <label for="slug" class="form-label">slug</label>
            <input type="text" name="slug" class="form-control" value="{{course.slug}}" id="slug"
                placeholder="Nhập từ khóa...">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="image" class="form-control" value="{{course.image}}" id="image"
                placeholder="Nhập từ khóa...">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">VideoId</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId"
                placeholder="Nhập từ khóa...">
        </div>
        <div class="mb-3">
            <label for="des" class="form-label">Desciption</label>
            <input type="text" name="desciption" class="form-control" value="{{course.desciption}}" id="des"
                placeholder="Nhập từ khóa...">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>